{{> header}}

<body>

<div id="wrapper">
    {{> nav}}


    <div class="row">
        <div class="col-md-2">
            {{> treeview}}
        </div>
        <div class="col-md-9">
            <div class="singlecontainer well">
                <p>TO DO: show single mail data</p>
            </div>
            <div class="tablecontainer">
                <table class="table table-striped">
                    <thead style="background-color: #2c3e50; color: #18bc9c;">
                    <tr class="scroll">
                        <th><i class="fa fa-envelope"></i></th>
                        <th><i class="fa fa-user"></i> <i class="fa fa-arrow-right"></i></th>
                        <th><i class="fa fa-user"></i> <i class="fa fa-arrow-left"></i></th>
                        <th><i class="fa fa-folder"></i></th>
                        <th><i class="fa fa-calendar"></i></th>
                        <th><i class="fa fa-paperclip"></i></th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                        {{#mail}}

                            <tr>
                                <td>{{subject}}</td>
                                <td>{{getSenderEmailAddress}}</td>
                                <td>{{recievedAdress}}</td>
                                <td>{{folderName}}</td>
                                <td>{{messageDeliveryTime}}</td>
                                <td>{{getNumberOfAttachments}}</td>
                            </tr>

                        {{/mail}}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>

{{> footer}}